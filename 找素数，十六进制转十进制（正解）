’十六进制转十进制

Dim s, c As String
Dim n, h As Integer

s = UCase(TextBox1.Text)
n = Len(s)
For i = 1 To n
    c = Mid(s, i ,1)
    If c >= "0" And c <= "9" Then
        h = h* 16 + Val(c)
    Elseif c >= "A"
        h = h * 16 + Asc(c) - 55

'以a5b为例
'十六进制中a=10 : b = 11

h=10
h=10*16 + 5
h=(10 * 16 + 5)*16 + 11

'即h = 10 * 16 * 16 + 5 * 16  + 11
'即h = 10 * ( 16 ^ 2 ) + 5 * ( 16 ^ 1 ) + 11 * ( 16 ^ 0 )


